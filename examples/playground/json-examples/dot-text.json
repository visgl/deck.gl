{
  "description": "A minimal deck.gl example rendering a circle with text",
  "initialViewState": {
    "longitude": -122.45,
    "latitude": 37.8,
    "zoom": 12
  },
  "layers": [
    {
      "@@type": "ScatterplotLayer",
      "data": [
        {
          "position": [
            -122.45,
            37.8
          ]
        }
