{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@deck.gl/core/*": ["modules/core/src/*"],
      "@deck.gl/core/test": ["modules/core/test"],
      "@deck.gl/extensions/*": ["modules/extensions/src/*"],
      "@deck.gl/extensions/test": ["modules/extensions/test"],
      "@deck.gl/json/*": ["modules/json/src/*"],
      "@deck.gl/json/test": ["modules/json/test"],
      "@deck.gl/main/*": ["modules/main/src/*"],
      "@deck.gl/main/test": ["modules/main/test"],
      "@deck.gl/test-utils/*": ["modules/test-utils/src/*"],
      "@deck.gl/test-utils/test": ["modules/test-utils/test"],

      "@deck.gl/react/*": ["modules/react/src/*"],
      "@deck.gl/react/test": ["modules/react/test"],

      "@deck.gl/jupyter-widget/*": ["modules/jupyter-widget/src/*"],
      "@deck.gl/jupyter-widget/test": ["modules/jupyter-widget/test"],

      "@deck.gl/arcgis/*": ["modules/arcgis/src/*"],
      "@deck.gl/arcgis/test": ["modules/arcgis/test"],
      "@deck.gl/carto/*": ["modules/carto/src/*"],
      "@deck.gl/carto/test": ["modules/carto/test"],
      "@deck.gl/mapbox/*": ["modules/mapbox/src/*"],
      "@deck.gl/mapbox/test": ["modules/mapbox/test"],
      "@deck.gl/google/*": ["modules/google/src/*"],
      "@deck.gl/google/test": ["modules/google/test"],

      "@deck.gl/layers/*": ["modules/layers/src/*"],
      "@deck.gl/layers/test": ["modules/layers/test"],
      "@deck.gl/geo-layers/*": ["modules/geo-layers/src/*"],
      "@deck.gl/geo-layers/test": ["modules/geo-layers/test"],
      "@deck.gl/aggregation-layers/*": ["modules/aggregation-layers/src/*"],
      "@deck.gl/aggregation-layers/test": ["modules/aggregation-layers/test"],
      "@deck.gl/mesh-layers/*": ["modules/mesh-layers/src/*"],
      "@deck.gl/mesh-layers/test": ["modules/mesh-layers/test"],

      "test": ["test"]
    }
  },
  "include": [
    "modules/core/src/**/*.js",
    "modules/extensions/src/**/*.js",
    "modules/json/src/**/*.js",
    "modules/main/src/**/*.js",
    "modules/test-utils/src/**/*.js",
    "modules/react/src/**/*.js",
    "modules/arcgis/src/**/*.js",
    "modules/carto/src/**/*.js",
    "modules/mapbox/src/**/*.js",
    "modules/google/src/**/*.js",
    "modules/layers/src/**/*.js",
    "modules/geo-layers/src/**/*.js",
    "modules/aggregation-layers/src/**/*.js",
    "modules/mesh-layers/src/**/*.js"
  ],
  "exclude":[
    "modules/jupyter-widget/src/**/*.js",

    "modules/**/test/**/**/*.js",

    "modules/**/src/libs/*",
    "modules/*/dist/**/*",
    "modules/**/wip/**/*",
    "examples",
    "coverage",
    "website",
    "test",
  ]
}
