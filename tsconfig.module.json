// This is a base TS config for the individual packages, mainly for building .d.ts files
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "build": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "useDefineForClassFields": false,
    // Uncomment to debug
    // "listEmittedFiles": true
  }
}
