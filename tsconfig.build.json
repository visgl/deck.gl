// This is a base TS config for the individual packages, mainly for building .d.ts files
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Uncomment to debug
    "listEmittedFiles": true
  },
  "references": [
    {"path": "modules/aggregation-layers"},
    {"path": "modules/arcgis"},
    {"path": "modules/carto"},
    {"path": "modules/core"},
    {"path": "modules/extensions"},
    {"path": "modules/geo-layers"},
    {"path": "modules/google-maps"},
    {"path": "modules/json"},
    {"path": "modules/jupyter-widget"},
    {"path": "modules/layers"},
    {"path": "modules/main"},
    {"path": "modules/mapbox"},
    {"path": "modules/mesh-layers"},
    {"path": "modules/react"},
    {"path": "modules/test-utils"}
  ],
  "include": [
    "modules/*/src"
  ],
  "exclude": [
    "modules/*/src/libs",
    "examples",
    "test",
    "scripts",
    "modules/*/wip",
    "modules/*/bin",
    "modules/*/wip",
    "modules/*/test",
    "modules/*/dist"
  ]
}
